<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_actor"
        android:layout_width="@dimen/small_icon_actor_width"
        android:layout_height="@dimen/small_icon_actor_width"
        android:layout_marginTop="@dimen/margin_tiny_plus"
        android:layout_marginStart="@dimen/margin_normal"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/small_icon_actor_width"
        android:layout_height="@dimen/height_textline_extra_large"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginStart="@dimen/margin_normal"
        android:height="@dimen/height_textline_small"
        android:fontFamily="@font/roboto_black"
        android:gravity="center_horizontal|start"
        tools:text="@tools:sample/full_names"
        android:textColor="@color/text_almost_white"
        android:textSize="12sp"/>

</LinearLayout>