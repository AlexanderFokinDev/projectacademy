<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_background_image"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_movie_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_background_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBackground"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackground">
        </View>

        <TextView
            android:id="@+id/tvPath"
            android:layout_width="@dimen/width_back_button"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left_back_button"
            android:layout_marginTop="@dimen/margin_top_back_button"
            android:alpha="0.5"
            android:fontFamily="@font/roboto_light"
            android:gravity="end|center_vertical"
            android:text="@string/button_back"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"
            app:drawableStartCompat="@drawable/ic_path"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="@dimen/width_age_field"
            android:layout_height="@dimen/width_age_field"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_top_age"
            android:alpha="0.9"
            android:background="@drawable/shape_rectangle_with_circle_corners"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="@string/minimum_age"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_top_age"
            android:fontFamily="@font/roboto_black"
            android:letterSpacing="-0.05"
            android:text="@string/movie_name"
            android:gravity="start|bottom"
            android:textColor="@color/text_light"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBackground"
            app:lineHeight="40dp">
        </TextView>

        <TextView
            android:id="@+id/tvTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:fontFamily="@font/roboto_light"
            android:gravity="start|top"
            android:text="@string/movie_tag"
            android:textColor="@color/text_red"
            android:textSize="14sp"
            app:lineHeight="@dimen/height_textline_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName">
        </TextView>

        <!--5 stars-->
        <ImageView
            android:id="@+id/ivStar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_between_star"
            android:scaleType="center"
            android:src="@drawable/ic_star_fill"
            app:layout_constraintEnd_toStartOf="@id/ivStar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTag">
        </ImageView>

        <ImageView
            android:id="@+id/ivStar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_between_star"
            android:scaleType="center"
            android:src="@drawable/ic_star_fill"
            app:layout_constraintEnd_toStartOf="@id/ivStar3"
            app:layout_constraintStart_toEndOf="@id/ivStar1"
            app:layout_constraintTop_toBottomOf="@id/tvTag">
        </ImageView>

        <ImageView
            android:id="@+id/ivStar3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_between_star"
            android:scaleType="center"
            android:src="@drawable/ic_star_fill"
            app:layout_constraintEnd_toStartOf="@id/ivStar4"
            app:layout_constraintStart_toEndOf="@id/ivStar2"
            app:layout_constraintTop_toBottomOf="@id/tvTag">
        </ImageView>

        <ImageView
            android:id="@+id/ivStar4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_between_star"
            android:scaleType="center"
            android:src="@drawable/ic_star_fill"
            app:layout_constraintEnd_toStartOf="@id/ivStar5"
            app:layout_constraintStart_toEndOf="@id/ivStar3"
            app:layout_constraintTop_toBottomOf="@id/tvTag">
        </ImageView>

        <ImageView
            android:id="@+id/ivStar5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_between_star"
            android:scaleType="center"
            android:src="@drawable/ic_star_empty"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/ivStar4"
            app:layout_constraintTop_toBottomOf="@id/tvTag">
        </ImageView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="97.35dp"/>

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_textline_normal"
            android:layout_marginStart="5.65dp"
            android:fontFamily="@font/roboto_black"
            android:gravity="start|top"
            android:text="@string/movie_review"
            android:textAllCaps="true"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvTag"
            app:layout_constraintTop_toTopOf="@id/ivStar5"
            app:layout_constraintBottom_toBottomOf="@id/ivStar5"
            >
        </TextView>

        <!--Info about the movie-->
        <TextView
            android:id="@+id/tvStorylineTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_textline_normal"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:fontFamily="@font/roboto_black"
            android:text="@string/title_storyline"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReview"
            >
        </TextView>

        <TextView
            android:id="@+id/tvStoryline"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_story"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_light"
            android:text="@string/text_storyline"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStorylineTitle"
            app:layout_constraintEnd_toEndOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_textline_large"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_medium"
            android:fontFamily="@font/roboto_black"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.017"
            android:text="@string/title_cast"
            android:textColor="@color/text_light_gray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStoryline">
        </TextView>

        <!--Images of actors-->
        <ImageView
            android:id="@+id/ivActor1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/margin_tiny_plus"
            android:layout_marginStart="@dimen/margin_normal"
            android:scaleType="centerCrop"
            android:src="@drawable/actor1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivActor2"
            app:layout_constraintTop_toBottomOf="@id/tvCast">
        </ImageView>

        <ImageView
            android:id="@+id/ivActor2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/margin_tiny_plus"
            android:layout_marginStart="@dimen/margin_small"
            android:scaleType="centerCrop"
            android:src="@drawable/actor2"
            app:layout_constraintStart_toEndOf="@id/ivActor1"
            app:layout_constraintEnd_toStartOf="@id/ivActor3"
            app:layout_constraintTop_toBottomOf="@id/tvCast">
        </ImageView>

        <ImageView
            android:id="@+id/ivActor3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/margin_tiny_plus"
            android:layout_marginStart="@dimen/margin_small"
            android:scaleType="centerCrop"
            android:src="@drawable/actor3"
            app:layout_constraintStart_toEndOf="@id/ivActor2"
            app:layout_constraintEnd_toStartOf="@id/ivActor4"
            app:layout_constraintTop_toBottomOf="@id/tvCast">
        </ImageView>

        <ImageView
            android:id="@+id/ivActor4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/margin_tiny_plus"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_normal"
            android:scaleType="centerCrop"
            android:src="@drawable/actor4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivActor3"
            app:layout_constraintTop_toBottomOf="@id/tvCast">

        </ImageView>

        <!--Names of actors-->
        <TextView
            android:id="@+id/tvActorName1"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_textline_extra_large"
            android:layout_marginTop="@dimen/margin_tiny"
            android:height="@dimen/height_textline_small"
            android:fontFamily="@font/roboto_black"
            android:gravity="center_horizontal|start"
            android:text="@string/name_actor1"
            android:textColor="@color/text_almost_white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivActor1"
            app:layout_constraintStart_toStartOf="@id/ivActor1"
            app:layout_constraintTop_toBottomOf="@+id/ivActor1">
        </TextView>

        <TextView
            android:id="@+id/tvActorName2"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_textline_extra_large"
            android:layout_marginTop="@dimen/margin_tiny"
            android:height="@dimen/height_textline_small"
            android:fontFamily="@font/roboto_black"
            android:gravity="center_horizontal|start"
            android:text="@string/name_actor2"
            android:textColor="@color/text_almost_white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivActor2"
            app:layout_constraintStart_toStartOf="@id/ivActor2"
            app:layout_constraintTop_toBottomOf="@+id/ivActor2">
        </TextView>

        <TextView
            android:id="@+id/tvActorName3"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_textline_extra_large"
            android:layout_marginTop="@dimen/margin_tiny"
            android:height="@dimen/height_textline_small"
            android:fontFamily="@font/roboto_black"
            android:gravity="center_horizontal|start"
            android:text="@string/name_actor3"
            android:textColor="@color/text_almost_white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivActor3"
            app:layout_constraintStart_toStartOf="@id/ivActor3"
            app:layout_constraintTop_toBottomOf="@+id/ivActor3">
        </TextView>

        <TextView
            android:id="@+id/tvActorName4"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_textline_extra_large"
            android:layout_marginTop="@dimen/margin_tiny"
            android:height="@dimen/height_textline_small"
            android:fontFamily="@font/roboto_black"
            android:gravity="center_horizontal|start"
            android:text="@string/name_actor4"
            android:textColor="@color/text_almost_white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivActor4"
            app:layout_constraintStart_toStartOf="@id/ivActor4"
            app:layout_constraintTop_toBottomOf="@+id/ivActor4">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>